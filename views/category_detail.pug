extends layout 

block content 
    h1= title
    hr
    h2= category.name
    p= category.description
    ul
        each item in category_items
            li
                a(href=item.url) #{item.name}
    p
        a(href='/category/update/'+category._id) Update category
    p
        a(href='/category/delete/'+category._id) Delete category