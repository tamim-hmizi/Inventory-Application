extends layout

block content

  h1 title
  hr
  if category_items.length

    p #[strong Delete the following items before attempting to delete this category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Items
      dl
        each item in category_items
          dt
            a(href=item.url) #{item.name}

  else
    p Do you really want to delete #{category.name} ?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden', name='id', value=category._id )

      button.btn.btn-primary(type='submit') Yes